                                <li><a href="">Category</a></li>
                                <li><a href="">Category</a></li>
                                <li><a href="">About us</a></li>
                                <li><a href="">Contact us</a></li>
                            </ul>
                        </li>
                        <li><a href="">Category</a></li>
                        <li><a href="">Category</a></li>
                        <li><a href="">Category</a></li>
                        <li><a href="">Category</a></li>
                        <li><a href="">Category</a></li>
                        <li><a href="">Category</a></li>
                        <li><a href="">About us</a></li>
                        <li><a href="">Contact us</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </section>


    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</body>
</html>
