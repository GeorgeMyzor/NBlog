<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="https://use.fontawesome.com/422948409f.js"></script>
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")

    @RenderSection("scripts", required: false)
    <!--Oswald Font -->
    <link href='http://fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="~/Content/yellow-blog/tooltipster.css" />
    <!-- home slider-->
    <link href="~/Content/yellow-blog/pgwslider.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/yellow-blog/font-awesome.min.css">
    <link href="~/Content/yellow-blog/style.css" rel="stylesheet" media="screen">
    <link href="~/Content/yellow-blog/responsive.css" rel="stylesheet" media="screen">
</head>
<body>
<section id="header_area">
    <div class="wrapper header" style="height: 135px">
        <div class="clearfix header_top">
            <div class="clearfix logo floatleft">
                <a href="@Url.RouteUrl("Main")">
                    <h1><span>N</span> Blog
                    </h1></a>
            </div>
            <div class="clearfix search floatright">
                @using (Html.BeginForm("Find", "Article"))
                {
                    <input type="text" name="term" id="findArticle" placeholder="Start with # to find by tag."/>
                    <input type="submit"/>
                }
            </div>
        </div>
        <div class="header_bottom" style="height: 50px">
            <nav>
                <ul id="nav">
                    <li>@Html.RouteLink("Home", "Main")</li>
                    <li>@Html.RouteLink("Popular", "AllArticles", new {action = "Popular"})</li>
                    <li>@Html.RouteLink("Account", "ViewAccount")</li>
                    <li>@Html.RouteLink("Create", "AllArticles", new {action = "Create"})</li>
                    <li><a href="">About us</a></li>
                    <li><a href="">Contact us</a></li>
                    <li id="dropdown">
                        <a href="">Drop Down</a>
                        <ul>
                            <li><a href="">Category</a></li>
                            <li><a href="">About us</a></li>
                            <li><a href="">Contact us</a></li>
                        </ul>
                    </li>
                    @if (!string.IsNullOrEmpty(User.Identity.Name))
                    {
                        <li style="float: right; display: inline">
                            @Html.RouteLink("Logoff", "AuthAction", new {action = "Logoff"})
                        </li>

                        <li style="float: right; display: inline">
                            <h3>Loggin as @User.Identity.Name</h3>
                        </li>
                    }
                    else
                    {
                        <li style="float: right; display: inline">
                            @Html.RouteLink("Login", "AuthAction", new {action = "Login"})
                        </li>

                        <li style="float: right; display: inline">
                            @Html.RouteLink("Register", "AuthAction", new { action = "Register" })
                        </li>
                    }
                </ul>

            </nav>
        </div>
    </div>
</section>


<section id="content_area">
    <div class="clearfix wrapper main_content_area">
        @RenderSection("body", required: false)
        @RenderBody()

    </div>
</section>
<hr/>

<footer>
    <section id="footer_bottom_area">
        <div class="clearfix wrapper footer_bottom">
            <div class="clearfix copyright floatleft">
                <p> Copyright &copy; All rights reserved by <span>Me</span></p>
            </div>
            <div class="clearfix social floatright">
                <ul>
                    <li><a class="tooltip" title="Facebook" href=""><i class="fa fa-facebook-square"></i></a></li>
                    <li><a class="tooltip" title="Twitter" href=""><i class="fa fa-twitter-square"></i></a></li>
                    <li><a class="tooltip" title="Google+" href=""><i class="fa fa-google-plus-square"></i></a></li>
                    <li><a class="tooltip" title="LinkedIn" href=""><i class="fa fa-linkedin-square"></i></a></li>
                    <li><a class="tooltip" title="tumblr" href=""><i class="fa fa-tumblr-square"></i></a></li>
                    <li><a class="tooltip" title="Pinterest" href=""><i class="fa fa-pinterest-square"></i></a></li>
                    <li><a class="tooltip" title="RSS Feed" href=""><i class="fa fa-rss-square"></i></a></li>
                    <li><a class="tooltip" title="Sitemap" href=""><i class="fa fa-sitemap"></i> </a></li>
                </ul>
            </div>
        </div>
    </section>
</footer>
</body>
</html>
