@model MVCNBlog.ViewModels.AnswerViewModel

<br />
<b> &nbsp; &nbsp; Comment:</b>
@Html.DisplayFor(modelItem => modelItem.Content)
<b> &nbsp; &nbsp; Author's comment:</b>
@Html.DisplayFor(modelItem => modelItem.Author.Name)

@Html.RouteLink("View user", "UserAction", new { action = "Index", name = Model.Author?.Name, id = Model.Author?.Id },
            new { @class = "btn btn-default" })
<b> &nbsp; &nbsp; Publication time:</b>
@Html.DisplayFor(modelItem => modelItem.PublicationDate)

@if (User.IsInRole("Administrator"))
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a class="btn btn-default" href="@Url.Action("Edit", new {id = Model.Id})">Edit comment</a>
        </div>
    </div>
}
