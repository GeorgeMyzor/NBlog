@model IEnumerable<MVCNBlog.ViewModels.ArticleViewModel>

<div id="allArticles">
    <h2>@ViewBag.GroupName</h2>

    @foreach (var article in Model)
    {

        <div class="clearfix single_content">
            <div class="clearfix post_date floatleft">
                <div class="date">
                    <h3>@article.PublicationDate.Day</h3>
                    <p>Month num: @article.PublicationDate.Month</p>
                </div>
            </div>
            <div class="clearfix post_detail">
                <h2>
                    <a href=""> @Html.DisplayFor(modelItem => article.Title). </a>
                </h2>
                <div class="clearfix post-meta">
                    <p>
                        <span>
                            <i class="fa fa-user"></i>
                        </span> <span><i class="fa fa-comment"></i> @article.Comments.Count()</span>
                    </p>
                </div>
                <div class="clearfix post_excerpt">
                    <img src="~/content/yellow-blog/images/thumb.png" alt="" />
                    <p>
                        @Html.DisplayFor(modelItem => article.Content)
                    </p>
                </div>
                @Html.RouteLink("Continue Reading", "ArticleAction", new { action = "Index", title = article.Title, id = article.Id })
            </div>
        </div>
    }
</div>

