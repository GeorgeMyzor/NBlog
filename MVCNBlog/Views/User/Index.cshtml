@model IEnumerable<MVCNBlog.ViewModels.UserViewModel>
@{
    ViewBag.Title = "Home Page";
}

<h2>All users</h2>
    @foreach (var item in Model)
    {
        <b>User name:</b>
        @Html.DisplayFor(modelItem => item.Name)
        <b>Creation date:</b>
        @Html.DisplayTextFor(modelItem => item.CreationDate)
        
        @Html.ActionLink("Edit user","Edit", new { item.Id})
        @Html.ActionLink("Delete user", "Delete", new { item.Id })

        foreach (var role in item.Roles)
        {
            <br/>
            <b> &nbsp; &nbsp; Role:</b>
            @Html.DisplayFor(modelItem => role.RoleName)
        }
        <br/>
    }

<a href="Create">Create user</a>
<a href="Delete">Delete user</a>
