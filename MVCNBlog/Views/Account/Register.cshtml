@model MVCNBlog.ViewModels.User.RegisterUserViewModel
@{
    ViewBag.Title = "Register";
}

<div class="clearfix newsletter regester">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post,
                        new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h2>Register</h2>
        <div>
            @Html.LabelFor(m => m.Email, new {@class = "col-md-2 control-label"})
            @Html.TextBox("Email", null, new {id = "mce-EMAIL", type = "email", placeholder = "Email"})
            @Html.ValidationMessageFor(m => m.Email, null, new {@class = "text-danger"})
        </div>

        <div>
            @Html.LabelFor(m => m.Name, new {@class = "col-md-2 control-label"})
            @Html.TextBox("Name", null, new {id = "mce-EMAIL", type = "text", placeholder = "Name"})
            @Html.ValidationMessageFor(m => m.Name, null, new {@class = "text-danger"})
        </div>

        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
        <div>
            @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-2 control-label"})
            @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new {@class = "text-danger"})
        </div>

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register"/>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
